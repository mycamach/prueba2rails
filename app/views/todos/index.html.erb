<div class="container">
  <div class="row">
    <% @todos.each_slice(3) do |row| %>
    <% row.each do |todo| %>
    <div class="col">
      <div class="card">
        <%= image_tag todo.photo, class: 'card-img-top' %>
        <div class="body">
          <h3> <%= todo.title %> </h3>

          <% todo.tasks.each do |task| %>
            <%if task.completed %>
              <%= link_to "ToDo listo", task_path(task.id), class: 'btn btn-success', method: :patch %>
            <% else %>
              <%= link_to "ToDo NO listo", task_path(task.id), class: 'btn btn-danger', method: :patch %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
    <div class="w-100" style="margin-top: 20px"></div>
    <% end %>
  </div>
</div>
